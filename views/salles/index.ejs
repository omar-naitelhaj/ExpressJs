        <script>
            function makepage(src, salle, bloc) {
                // We break the closing script tag in half to prevent
                // the HTML parser from seeing it as a part of
                // the *main* page.

                return "<html>\n" +
                    "<head>\n" +
                    "<title>Temporary Printing Window</title>\n" +
                    "<script>\n" +
                    "function step1() {\n" +
                    "  setTimeout('step2()', 10);\n" +
                    "}\n" +
                    "function step2() {\n" +
                    "  window.print();\n" +
                    "  window.close();\n" +
                    "}\n" +
                    "</scr" + "ipt>\n" +

                    "</head>\n" +

                    "<body onClick='step1()'>\n" +
                    "<img src='" + src + "'  style='" + "width:600px;" + "margin-left:50px;'" + "/>\n" +
                    "<h1 " + "  style='" + "width:600px; margin-left:250px;font-size:5em'" + ">" + salle + "</h1>" + "\n" +
                    "<h1 " + "  style='" + "width:600px; margin-left:250px;font-size:5em'" + ">" + bloc + "</h1>" + "\n" +

                    "</body>\n" +
                    "</html>\n";
            }
        </script>

