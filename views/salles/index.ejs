                image[0].onclick = function() {
                    link = "about:blank";
                    var pw = window.open(link, "_new");
                    pw.document.open();
                    pw.document.write(makepage(image[0].src, "<%= e.name %>", "<%= e.bloc.name %>"));
                    pw.document.close();
                };
